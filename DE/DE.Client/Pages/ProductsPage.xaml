<Page x:Class="DE.Client.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DE.Client.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products"
      FontFamily="Times New Roman">

    <Page.Resources>
        <local:DiscountToBackgroundConverter x:Key="DiscountToBackgroundConverter" />
        <local:DiscountToForegroundConverter x:Key="DiscountToForegroundConverter" />
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#7FFF00"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Каталог товаров"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Black" />

                <TextBlock Grid.Column="1"
                           Text="{Binding FilteredCount, StringFormat=Доступно товаров: {0}}"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"
                           Foreground="Black" />

                <Button Grid.Column="2"
                        Content="{Binding CartItemCount, StringFormat=Корзина ({0})}"
                        Padding="10,6"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Background="#2E7D32"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#1B5E20"
                        BorderThickness="1"
                        Cursor="Hand" />
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Background="#F5FFF5"
                BorderBrush="#00FA9A"
                BorderThickness="0 0 0 1"
                Padding="10">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <WrapPanel ItemWidth="240"
                           ItemHeight="80"
                           Orientation="Horizontal"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="0,0,10,10" Width="240">
                        <TextBlock Text="Поиск" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <TextBox Width="220"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Поиск по названию или описанию"
                                 Padding="6" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,10,10" Width="220">
                        <TextBlock Text="Сортировка" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <ComboBox Width="180"
                                  ItemsSource="{Binding SortOptions}"
                                  SelectedItem="{Binding SelectedSortOption}"
                                  Padding="4" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,10,10" Width="200">
                        <TextBlock Text="Скидка" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <ComboBox Width="160"
                                  ItemsSource="{Binding DiscountFilters}"
                                  SelectedItem="{Binding SelectedDiscountFilter}"
                                  Padding="4" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,10,10" Width="180">
                        <TextBlock Text="Цена от" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <TextBox Width="140"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding MinPriceFilterText, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Минимальная цена"
                                 Padding="6" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,10,10" Width="180">
                        <TextBlock Text="Цена до" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <TextBox Width="140"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding MaxPriceFilterText, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Максимальная цена"
                                 Padding="6" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,10,10" Width="200" VerticalAlignment="Center">
                        <TextBlock Text="Наличие" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <CheckBox Content="Только в наличии"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding OnlyShowAvailable}"
                                  FontWeight="SemiBold" />
                    </StackPanel>
                </WrapPanel>
            </ScrollViewer>
        </Border>

        <ListView Grid.Row="2"
                  ItemsSource="{Binding ProductsView}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Background="Transparent"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="true">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding Discount, Converter={StaticResource DiscountToBackgroundConverter}}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="10"
                            Padding="15"
                            HorizontalAlignment="Stretch">

                        <Border.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground">
                                    <Setter.Value>
                                        <Binding Path="Discount" Converter="{StaticResource DiscountToForegroundConverter}" />
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Border.Resources>

                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="2"
                                              Color="#CCCCCC"
                                              Opacity="0.4" />
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Source="{Binding Photo}"
                                   Width="150"
                                   Height="150"
                                   Margin="0,0,15,0" />

                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Top"
                                        TextBlock.FontSize="13"
                                        TextBlock.Foreground="Black">

                                <TextBlock Text="{Binding ProductName}"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5" />

                                <TextBlock Text="{Binding Description}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,5" />

                                <TextBlock Text="{Binding Manufacturer}"
                                           Margin="0,0,0,5" />

                                <TextBlock Text="{Binding Supplier}"
                                           Margin="0,0,0,5" />

                                <TextBlock Foreground="#2E7D32"
                                           Margin="0,0,0,5">
                                    <TextBlock.Text>
                                        <Binding Path="PriceWithDiscount" StringFormat="Цена со скидкой: {0:#,0} ₽" />
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Text="{Binding Price, StringFormat='Старая цена: {0:#,0} ₽'}"
                                           Margin="0,0,0,5"
                                           Foreground="#9E9E9E"
                                           TextDecorations="Strikethrough">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Discount}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding UnitOfMeasure}"
                                           Margin="0,0,0,5" />

                                <TextBlock Margin="0,0,0,5"
                                           Text="{Binding StockQuantity, StringFormat='Количество на складе: {0} шт.'}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#1976D2" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsInStock}" Value="False">
                                                    <Setter Property="Foreground" Value="#D32F2F" />
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <Button Content="Добавить в корзину"
                                        Padding="10,6"
                                        Width="160"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Left"
                                        Click="AddToCart_Click"
                                        CommandParameter="{Binding}"
                                        Background="#2E7D32"
                                        Foreground="White"
                                        BorderBrush="#1B5E20"
                                        BorderThickness="1"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"
                                        IsEnabled="{Binding IsInStock}" />

                            </StackPanel>

                            <Border Grid.Column="2"
                                    Background="#FFF3E0"
                                    BorderBrush="#FFB74D"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <StackPanel>
                                    <TextBlock Text="Действующая скидка"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#D32F2F"
                                               TextAlignment="Center"
                                               Margin="0,0,0,4" />
                                    <TextBlock Text="{Binding Discount, StringFormat={}{0:F1}%}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#D32F2F"
                                               TextAlignment="Center" />
                                </StackPanel>
                            </Border>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

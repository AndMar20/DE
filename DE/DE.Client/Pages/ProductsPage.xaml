<Page x:Class="DE.Client.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DE.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products">

    <Grid>
        <!-- Убираем стандартные стили выделения -->
        <ListView ItemsSource="{Binding Products}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Background="Transparent"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch">
            <!-- Растягиваем по ширине -->

            <!-- Стиль для отключения выделения -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="true">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="10"
                            Padding="15"
                            HorizontalAlignment="Stretch">
                        <!-- Карточка растягивается -->

                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                              ShadowDepth="2" 
                                              Color="#CCCCCC" 
                                              Opacity="0.4"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Фото -->
                            <Image Grid.Column="0"
                                   Source="{Binding Photo}"
                                   Width="150"
                                   Height="150"
                                   Margin="0,0,15,0"/>

                            <!-- Описание -->
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Top"
                                        TextBlock.FontSize="13"
                                        TextBlock.Foreground="Black">

                                <TextBlock Text="{Binding ProductName}"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5"/>

                                <TextBlock Text="{Binding Description}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,5"/>

                                <TextBlock Text="{Binding Manufacturer}"
                                           Margin="0,0,0,5"/>

                                <TextBlock Text="{Binding Supplier}"
                                           Margin="0,0,0,5"/>

                                <!-- Цена в рублях -->
                                <TextBlock Foreground="#2E7D32"
                                           Margin="0,0,0,5">
                                    <TextBlock.Text>
                                        <Binding Path="Price" StringFormat="Цена: {0:#,0} ₽"/>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Text="{Binding UnitOfMeasure}"
                                           Margin="0,0,0,5"/>

                                <TextBlock Foreground="#1976D2"
                                           Margin="0,0,0,5"
                                           Text="{Binding StockQuantity, StringFormat='Количество на складе: {0} шт.'}"/>

                            </StackPanel>

                            <!-- Скидка -->
                            <Border Grid.Column="2"
                                    Background="#FFF3E0"
                                    BorderBrush="#FFB74D"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <StackPanel>
                                    <TextBlock Text="Действующая скидка"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#D32F2F"
                                               TextAlignment="Center"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Discount, StringFormat={}{0:F1}%}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#D32F2F"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Border>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

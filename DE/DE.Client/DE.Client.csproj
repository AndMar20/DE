<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\DE.DataLayer\DE.DataLayer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\DE.DataLayer\Photos\*.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>Photos\%(Filename)%(Extension)</Link>
    </Content>
  </ItemGroup>

</Project>
